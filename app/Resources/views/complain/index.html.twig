{% extends 'layout.html.twig' %}
{% do script(['app/js/complain/index.js'])%}
{% set complainSaveUrl = path('complain_submit') %}

{% block content %}
  <form id="complain-form" method="post" action="{{ complainSaveUrl }}">
    <div class="form-group controls">
      {{title|trans}}
    </div>

    <div class="form-group controls">
      <textarea class="form-control" rows="8" data-display="" name="context"></textarea>
    </div>
    <div class="form-group clearfix">
      <span class="color-danger">为方便我们排查错误，请您详细描述投诉内容</span>
      <span class="color-success pull-left js-review-remind" style="display: none;">{{'course.reviews.success_tips'|trans}}</span>
      <a href="javascript:;" class="btn btn-primary pull-right js-btn-save" data-loading-text="{{'form.btn.save.submiting'|trans}}" autocomplete="off">{{'form.btn.save'|trans}}</a>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>
{% endblock %}
